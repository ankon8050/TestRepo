<!DOCTYPE html>
<html>
<head>
  <title>Sample</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "Sample", root_path, method: :get, class: "navbar-brand" %>
  </div>

  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav navbar-right navbar-user">
      <% if current_user.present? %>
          Name: <%= current_user.name %>
          Email: <%= current_user.email %>
          <li class="row"><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
          <li class="row"><%= link_to "Log In", user_session_path %></li>
      <% end %>

      <li class="row"><%= link_to "Register", new_user_registration_path %></li>

    </ul>
  </div>
</nav>
<div class="container" style="margin-top: 50px;">
  <%= yield %>
</div>
</body>
</html>
